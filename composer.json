{
    "name": "sputnik/pubsub-bundle",
    "type": "symfony-bundle",
    "description": "Pubsubhubbub subscriber implementation.",
    "keywords": [ "pubsubhubbub", "hub", "subscriber" ],
    "homepage": "http://sputnikproject.org",
    "authors": [
        { "name": "Dmitri Lakachauskis", "email": "lakiboy83@gmail.com" }
    ],
    "require": {
        "php": ">=5.3.2",
        "sputnik/common": "~0.2.0",
        "symfony/framework-bundle": "~2.2",
        "guzzle/http": "~3.1",
        "guzzle/log": "~3.1",
        "guzzle/plugin-log": "~3.1"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "Required for ORM backend.",
        "doctrine/mongodb-odm-bundle": "Required for ODM backend.",
        "mandango/mandango-bundle": "Alternative to Doctrine - the poweful and ultrafast ODM for MongoDB."
    },
    "autoload": {
        "psr-0": { "Sputnik\\Bundle\\PubsubBundle": "" }
    },
    "target-dir": "Sputnik/Bundle/PubsubBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
