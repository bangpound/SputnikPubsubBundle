<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sputnik_pubsub.model.topic.class">Model\SputnikPubsubBundle\Topic</parameter>
        <parameter key="sputnik_pubsub.topic_manager.class">Sputnik\Bundle\PubsubBundle\Mandango\TopicManager</parameter>
    </parameters>

    <services>
        <service id="sputnik_pubsub.topic_manager" class="%sputnik_pubsub.topic_manager.class%">
            <argument type="service" id="mandango" />
            <argument>%sputnik_pubsub.model.topic.class%</argument>
        </service>
    </services>
</container>
