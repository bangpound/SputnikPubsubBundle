<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="service_pubsub.guzzle.class">Guzzle\Http\Client</parameter>
        <parameter key="service_pubsub.guzzle.log.monolog_adapter">Guzzle\Log\MonologLogAdapter</parameter>
        <parameter key="service_pubsub.guzzle.log.plugin">Guzzle\Plugin\Log\LogPlugin</parameter>
    </parameters>

    <services>
        <service id="service_pubsub.guzzle" class="%service_pubsub.guzzle.class%">
            <call method="addSubscriber">
                <argument type="service" id="service_pubsub.guzzle.log_plugin" />
            </call>
        </service>

        <service id="service_pubsub.guzzle.log_plugin" class="%service_pubsub.guzzle.log_plugin.class%" public="false">
            <argument type="service" id="service_pubsub.guzzle.log.monolog_adapter" />
        </service>

        <service id="service_pubsub.guzzle.log.monolog_adapter" class="%service_pubsub.guzzle.log.monolog_adapter.class%" public="false">
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="pubsub" />
        </service>
    </services>
</container>
