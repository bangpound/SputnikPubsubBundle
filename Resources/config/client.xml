<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="service_pubsub.model.topic.class">Service\PubsubBundle\Entity\Topic</parameter>
        <parameter key="service_pubsub.manager.topic.class">Service\PubsubBundle\Entity\TopicManager</parameter>
    </parameters>

    <services>
        <service id="service_pubsub.manager.topic" class="%service_pubsub.manager.topic.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%service_pubsub.manager.topic.class%</argument>
        </service>
    </services>
</container>
