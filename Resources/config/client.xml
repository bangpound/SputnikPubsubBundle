<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sputnik_pubsub.guzzle.class">GuzzleHttp\Client</parameter>
        <parameter key="sputnik_pubsub.guzzle.stack.class">GuzzleHttp\HandlerStack</parameter>
        <parameter key="sputnik_pubsub.guzzle.middleware.class">GuzzleHttp\Middleware</parameter>
        <parameter key="sputnik_pubsub.guzzle.message_formatter.class">GuzzleHttp\MessageFormatter</parameter>
    </parameters>

    <services>
        <service id="sputnik_pubsub.guzzle" class="%sputnik_pubsub.guzzle.class%">
            <argument type="collection">
                <argument type="service" key="stack" id="sputnik_pubsub.guzzle.stack"/>
            </argument>
        </service>

        <service id="sputnik_pubsub.guzzle.stack" class="%sputnik_pubsub.guzzle.stack.class%" public="false">
            <factory class="GuzzleHttp\HandlerStack" method="create" />
            <call method="push">
                <argument type="service" id="sputnik_pubsub.guzzle.logger" />
            </call>
        </service>

        <service id="sputnik_pubsub.guzzle.message_formatter" class="%sputnik_pubsub.guzzle.message_formatter.class%" public="false" />

        <service id="sputnik_pubsub.guzzle.logger" class="callback" public="false">
            <factory class="GuzzleHttp\Middleware" method="log" />
            <argument type="service" id="logger" />
            <argument type="service" id="sputnik_pubsub.guzzle.message_formatter" />
        </service>

        <service id="sputnik_pubsub.http_client" alias="sputnik_pubsub.guzzle" />
    </services>
</container>
